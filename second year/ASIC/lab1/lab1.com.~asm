; lab1.asm
; вариант №1: вывод на экран сообщения "Hello World"
.model tiny                 ; модель память размером сегмента до 64 Кб для COM
.code                       ; начало сегмента кода
org 100h                    ; установка программного счётчика IP=100h
start:   mov ah,9                     ; загрузка номера функции DOS для вывода строки в регистр AH
mov dx, offset message      ; загрузка в регистр DX адреса строки "message", которая будет выводиться на экран
int 21h                     ; вызов системной функции DOS с помощью прерывания 21h для вывода строки на экран
ret                         ; завершение COM-программы
message db "Hello World!",0Dh,0Ah,'$' ; объявление строки
end start                   ; завершение программы и указание точки входа



