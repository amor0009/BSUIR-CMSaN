.model small
.stack 100h

.data
str db 'Hello World$'
len equ $-str
temp db 0

.code
mov ax, @data
mov ds, ax

; ??????? ????
mov si, 0
outer:
; ?????????? ????
mov di, 0
inner:
mov al, str[di]
cmp al, str[di + 1]
ja skip_swap
; ?????? ??????? ???????
mov ah, str[di + 1]
mov temp, ah
mov ah, al
mov str[di + 1], ah
mov al, temp
mov str[di], al
skip_swap:
inc di
cmp di, len - 1
jbe inner

; ??????????? i
inc si
cmp si, len - 1
jbe outer

; ??????? ??????????????? ??????
mov dx, offset str
mov ah, 09h
int 21h

mov ah, 4Ch
int 21h
end



